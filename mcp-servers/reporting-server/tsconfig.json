{
  "extends": "@skyfire-xyz/tsconfig/node20.json",
  "ts-node": {
    "transpileOnly": true,
    "files": false,
  },
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "./build",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "esnext",
    ],
    "resolveJsonModule": true,
    "types": [
      "node",
      "express",
      "pino"
    ],
    "baseUrl": "./",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
